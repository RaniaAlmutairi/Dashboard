@model DamagedProducts
@{
    ViewData["Title"] = "Damage Product";
}

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4 "><span class="badge bg-light rounded bg-dark"> Define Damaged Product </span> </h1>
        </div>
    </div>
</div>
<div class="modal" tabindex="-1" id="demag">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title"> Define Damaged Product </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddDemag" method="post">
                    <div class="row">
                        <div class="col">
                            <label class="form-label" for="">Product Name</label>
                            <select class="form-select" id="ProductId" asp-for="ProductId">
                                @foreach (var items in ViewBag.products)
                                {
                                    <option value="@items.Id">@items.Name</option>
                                }
                            </select>

                        </div>
                        <div class="col">
                            <label class="form-label" for=""> Quantity </label>
                            <input type="text" id="description" asp-for="Qty" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="row text-center mt-5">
                        <div class="col">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@* //----------------------------------------------------------------------DelJAVASCRIPT---------------------------------------------------------------------*@

<div class="modal" tabindex="-1" id="confirm">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete?!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="Confiremdel1()">Yes</button>

            </div>
        </div>
    </div>
</div>
@* //--------------------------------------------------------------------------------------------------------------------------------------------------------- *@
<div class="modal" tabindex="-1" id="update3">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">Edit Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Update3" method="post">
                    <input type="hidden" id="Id" />
                    <input type="hidden" id="Id_Product" />
           
                    <div class="row">
                        <div class="col">
                            <label class="form-text">Quantity</label>
                            <input type="text" id="Qty" name="Qty" class="form-control" />
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col text-center">
                            <button type="submit" class="btn btn-info  data-bs-dismiss=" modal"">Update</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@* //--------------------------------------------------------------------------------------------------------------------------------------------------------- *@

<table class="table table-bordered text-center">
    <thead class="bg-dark text-white">
        <tr>
            <td>Product ID</td>
            <td>Product Name</td>
            <td>Product Color</td>
            <td> Quantity </td>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.damage)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.color</td>
                <td>@item.qty</td>
                <td><a onclick="ShowDelMessage(@item.id)"><i class="bi bi-archive-fill text-danger"></i></a></td>
                <td><a onclick="update3(@item.id)"><i class="bi bi-pencil-fill icon-dark-purple"></i></a></td>
            </tr>
        }
    </tbody>
</table>

<div class="row text-center mt-3">
    <div class="col ">
        <button class="btn btn-dark bg-dark" onclick="AddNewDemag()"> <i class="fs-4 bi-cart-plus p-2"></i> Define Damaged Product </button>
    </div>
</div>